    <div id="error" class="modal">
        <div class="modal-content">
            <span class="center red-text"><h4>An Error has Occurred</h4></span>
            <% for (let e of error) { %>
                <span class="center red-text light"><p><%= e %></p></span>
            <% } %>
            <p class="center">If the error persists please feel free to call us.</p>
        </div>
        <div class="modal-footer">
