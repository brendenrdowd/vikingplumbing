    <div class="container">
        <div class="section">

            <!--   Form   -->
            <div class="row">
                <h3 class="center">Request an Appointment</h3>
                <h5 class="center light">Need service or looking for a quote? Tell us what the problem is and we'll get back to you as soon as we
                    can.</h5>
                <form action="/appointment" id="appointment-form" method="post" role="form" class="s12">
                    <div class="row">
                        <div class="input-field col s6">
                            <input name="first_name" id="first_name" type="text" class="validate">
                            <label for="first_name">First Name</label>
                        </div>
                        <div class="input-field col s6">
                            <input name="last_name" id="last_name" type="text" class="validate">
                            <label for="last_name">Last Name</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input name="email" id="email" type="email" class="validate">
                            <label for="email">Email</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input name="confirm" id="confirm" type="email" class="validate">
                            <label for="confirm">Confirm Email</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <textarea name="problem" id="problem" class="materialize-textarea"></textarea>
                            <label for="problem">What's the Problem?</label>
                        </div>
                    </div>
                    <button class="btn waves-effect waves-light blue right" type="submit" name="action">Send</button>
                </form>
            </div>
        </div>
    </div>

